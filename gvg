import random

def print_board(board):
    for row in board:
        print(" | ".join(row))
        print("-" * 9)  # Увеличим длину разделителя, чтобы он подходил к сетке

def check(board):
    # Проверка строк
    for row in board:
        if row[0] == row[1] == row[2] and row[0] != "":
            return f"Победитель: {row[0]}"

    # Проверка столбцов
    for col in range(3):
        if board[0][col] == board[1][col] == board[2][col] and board[0][col] != "":
            return f"Победитель: {board[0][col]}"

    # Проверка диагоналей
    if board[0][0] == board[1][1] == board[2][2] and board[0][0] != "":
        return f"Победитель: {board[0][0]}"
    if board[0][2] == board[1][1] == board[2][0] and board[0][2] != "":
        return f"Победитель: {board[0][2]}"

    # Проверка на ничью
    for row in board:
        if "" in row:
            return "Игра продолжается"

    return "Ничья"

def player_move(board):
    while True:
        try:
            move = int(input("Выберите клетку (1-9): ")) - 1
            if move < 0 or move > 8:
                print("Неверный номер клетки. Пожалуйста, выберите число от 1 до 9.")
                continue
            row, col = divmod(move, 3)
            if board[row][col] == "":
                board[row][col] = "X"
                break
            else:
                print("Эта клетка уже занята. Попробуйте снова.")
        except ValueError:
            print("Пожалуйста, введите правильный номер клетки.")

def computer_move(board):
    while True:
        move = random.randint(0, 8)
        row, col = divmod(move, 3)
        if board[row][col] == "":
            board[row][col] = "O"
            break

# Главная игра
def play_game():
    board = [["" for _ in range(3)] for _ in range(3)]
    print("Игра началась! Вы играете за 'X', а компьютер за 'O'.")
    while True:
        print_board(board)
        
        # Ход игрока
        player_move(board)
        result = check(board)
        if result != "Игра продолжается":
            print_board(board)
            print(result)
            break
        
        # Ход компьютера
        print("Ход компьютера...")
        computer_move(board)
        result = check(board)
        if result != "Игра продолжается":
            print_board(board)
            print(result)
            break

# Запуск игры
play_game()
